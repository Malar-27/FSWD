import React from "react";
import ReactDOM from "react-dom/client";
import App from "./App";

ReactDOM.createRoot(document.getElementById("root")).render(
  <React.StrictMode>
    <App />
  </React.StrictMode>
);


APP:
import React, { useState } from "react";
import "./App.css";

/* Child Component using Props */
function StudentDetails(props) {
  return (
    <div className="card student">
      <h2>ğŸ“ Student Profile</h2>
      <p><b>Name:</b> {props.name}</p>
      <p><b>Roll No:</b> {props.roll}</p>
      <p><b>Department:</b> {props.department}</p>
    </div>
  );
}

/* Component using State */
function Attendance() {
  const [present, setPresent] = useState(0);
  const [absent, setAbsent] = useState(0);

  return (
    <div className="card attendance">
      <h2>ğŸ“… Attendance Tracker</h2>
      <p className="present">Present Days: {present}</p>
      <p className="absent">Absent Days: {absent}</p>

      <button className="btn green" onClick={() => setPresent(present + 1)}>
        Mark Present
      </button>

      <button className="btn red" onClick={() => setAbsent(absent + 1)}>
        Mark Absent
      </button>
    </div>
  );
}

/* Conditional Rendering using State */
function ResultStatus() {
  const [isPassed, setIsPassed] = useState(true);

  return (
    <div className="card result">
      <h2>ğŸ“Š Result Status</h2>
      <p className={isPassed ? "pass" : "fail"}>
        {isPassed ? "Status: PASS âœ…" : "Status: FAIL âŒ"}
      </p>

      <button className="btn blue" onClick={() => setIsPassed(!isPassed)}>
        Toggle Result
      </button>
    </div>
  );
}

/* Main Parent Component */
function App() {
  return (
    <div className="container">
      <h1 className="title">ğŸŒˆ React.js Concepts Demonstration</h1>

      <StudentDetails
        name="Dhivya"
        roll="22CS101"
        department="Computer Science"
      />

      <Attendance />

      <ResultStatus />
    </div>
  );
}

export default App;
