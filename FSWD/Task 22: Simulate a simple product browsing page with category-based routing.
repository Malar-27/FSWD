Main.jsx:

import React from "react";
import ReactDOM from "react-dom/client";
import { BrowserRouter } from "react-router-dom";
import App from "./App";

ReactDOM.createRoot(document.getElementById("root")).render(
  <React.StrictMode>
    <BrowserRouter>
      <App />
    </BrowserRouter>
  </React.StrictMode>
);

App.jsx:
import { useState } from "react";

function App() {
  const [category, setCategory] = useState("home");

  return (
    <div style={{ padding: "20px", fontFamily: "Arial" }}>
      <h2>Product Browsing Page</h2>

      <nav style={{ display: "flex", gap: "15px" }}>
        <button onClick={() => setCategory("home")}>Home</button>
        <button onClick={() => setCategory("electronics")}>Electronics</button>
        <button onClick={() => setCategory("clothing")}>Clothing</button>
        <button onClick={() => setCategory("books")}>Books</button>
      </nav>

      <hr />

      {category === "home" && <p>Select a category</p>}
      {category === "electronics" && <p>Electronics Products</p>}
      {category === "clothing" && <p>Clothing Products</p>}
      {category === "books" && <p>Books Products</p>}
    </div>
  );
}

export default App;
