Main.jsx:
import React from "react";
import ReactDOM from "react-dom/client";
import App from "./App";

ReactDOM.createRoot(document.getElementById("root")).render(
  <React.StrictMode>
    <App />
  </React.StrictMode>
);

App.jsx:
import { useState } from "react";

function App() {
  const [formData, setFormData] = useState({
    name: "",
    email: "",
    workshop: "",
    level: "",
    message: ""
  });

  const [errors, setErrors] = useState({});

  // Handle input change
  const handleChange = (e) => {
    setFormData({
      ...formData,
      [e.target.name]: e.target.value
    });
  };

  // Validation
  const validate = () => {
    let newErrors = {};

    if (!formData.name.trim()) {
      newErrors.name = "Name is required";
    }

    if (!formData.email) {
      newErrors.email = "Email is required";
    } else if (!/\S+@\S+\.\S+/.test(formData.email)) {
      newErrors.email = "Invalid email format";
    }

    if (!formData.workshop) {
      newErrors.workshop = "Select a workshop";
    }

    if (!formData.level) {
      newErrors.level = "Choose experience level";
    }

    return newErrors;
  };

  // Submit handler
  const handleSubmit = (e) => {
    e.preventDefault();
    const validationErrors = validate();
    setErrors(validationErrors);

    if (Object.keys(validationErrors).length === 0) {
      alert("Registration Successful ðŸŽ‰");
    }
  };

  return (
    <div style={styles.container}>
      <h2>Online Workshop Registration</h2>

      <div style={styles.grid}>
        {/* Registration Form */}
        <form onSubmit={handleSubmit} style={styles.form}>
          <input
            type="text"
            name="name"
            placeholder="Full Name"
            value={formData.name}
            onChange={handleChange}
          />
          {errors.name && <p style={styles.error}>{errors.name}</p>}

          <input
            type="email"
            name="email"
            placeholder="Email Address"
            value={formData.email}
            onChange={handleChange}
          />
          {errors.email && <p style={styles.error}>{errors.email}</p>}

          <select
            name="workshop"
            value={formData.workshop}
            onChange={handleChange}
          >
            <option value="">Select Workshop</option>
            <option value="React Basics">React Basics</option>
            <option value="Cloud Computing">Cloud Computing</option>
            <option value="AI Fundamentals">AI Fundamentals</option>
          </select>
          {errors.workshop && <p style={styles.error}>{errors.workshop}</p>}

          <select
            name="level"
            value={formData.level}
            onChange={handleChange}
          >
            <option value="">Experience Level</option>
            <option value="Beginner">Beginner</option>
            <option value="Intermediate">Intermediate</option>
            <option value="Advanced">Advanced</option>
          </select>
          {errors.level && <p style={styles.error}>{errors.level}</p>}

          <textarea
            name="message"
            placeholder="Any message (optional)"
            value={formData.message}
            onChange={handleChange}
          />

          <button type="submit">Register</button>
        </form>

        {/* Live Preview */}
        <div style={styles.preview}>
          <h3>Live Preview ðŸ‘€</h3>
          <p><strong>Name:</strong> {formData.name || "â€”"}</p>
          <p><strong>Email:</strong> {formData.email || "â€”"}</p>
          <p><strong>Workshop:</strong> {formData.workshop || "â€”"}</p>
          <p><strong>Level:</strong> {formData.level || "â€”"}</p>
          <p><strong>Message:</strong> {formData.message || "â€”"}</p>
        </div>
      </div>
    </div>
  );
}

// Inline styles
const styles = {
  container: {
    maxWidth: "900px",
    margin: "40px auto",
    fontFamily: "Arial"
  },
  grid: {
    display: "flex",
    gap: "40px"
  },
  form: {
    flex: 1,
    display: "flex",
    flexDirection: "column",
    gap: "10px"
  },
  preview: {
    flex: 1,
    padding: "20px",
    border: "1px solid #ccc",
    borderRadius: "8px",
    backgroundColor: "#f9f9f9"
  },
  error: {
    color: "red",
    fontSize: "14px"
  }
};

export default App;

